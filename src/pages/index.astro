---
import config from "../config.json";
import { Icon } from "astro-icon";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/ico" href="/favicon.ico" />
		<meta name="viewport" content="width=device-width" />
		<title>nyan.coffee</title>
	</head>
	<body class="bg-zinc-800 text-zinc-100">
		<div class="m-8 sm:m-12">
			<div class="w-full flex justify-center items-center">
				<div
					class="flex flex-col items-center justify-center max-w-[980px] w-full"
				>
					<!-- Intro -->
					<div class="flex flex-col w-full gap-20">
						<div
							class="flex flex-col sm:flex-row gap-8 justify-center items-center"
						>
							<img
								alt={config.username}
								src={config.image}
								class="w-48 h-48 rounded-full"
							/>
							<div
								class="flex flex-col items-center text-center sm:text-left sm:items-start gap-1 justify-center max-w-sm"
							>
								<h1 class="font-bold text-4xl text-center">
									{config.username}
									<span class="text-lg text-zinc-300"
										>({config.pronouns})</span
									>
								</h1>
								<p class="text-zinc-400">
									{config.description}
								</p>

								<!-- Socials -->
								<div
									class="py-2 flex flex-row gap-4 items-center justify-center"
								>
									<a href={config.socials.github}>
										<Icon
											pack="bi"
											name="github"
											class="w-6 h-6 hover:text-zinc-300 transition-all"
										/>
									</a>
									<a href={config.socials.twitter}>
										<Icon
											pack="bi"
											name="twitter"
											class="w-6 h-6 hover:text-zinc-300 transition-all"
										/>
									</a>
									<a href={config.socials.discord}>
										<Icon
											pack="bi"
											name="discord"
											class="w-6 h-6 hover:text-zinc-300 transition-all"
										/>
									</a>
									<a href={config.socials.email}>
										<Icon
											pack="bi"
											name="envelope-fill"
											class="w-6 h-6 hover:text-zinc-300 transition-all"
										/>
									</a>
								</div>
							</div>
						</div>

						<div class="flex flex-col gap-20">
							<!-- Projects -->
							<div class="flex flex-col gap-4">
								<div class="flex flex-col">
									<h1 class="text-3xl font-bold">
										~/projects
									</h1>
									<p class="text-zinc-400">
										Listed below are a few projects I've
										contributed to:
									</p>
								</div>
								<div class="flex flex-col sm:flex-row gap-4">
									{
										config.projects.map((e) => (
											<a
												class="border border-zinc-600 rounded-md w-full p-4 hover:scale-[102.5%] transform-gpu transition-all duration-200"
												href={e.url}
												target="blank"
											>
												<h1 class="font-bold text-2xl">
													{e.name}
												</h1>
												<p class="text-zinc-200">
													{e.description}
												</p>
											</a>
										))
									}
									<div
										class="border border-zinc-600 border-dashed rounded-md w-full p-4 text-center justify-center flex flex-col"
									>
										<p class="text-zinc-400">
											Want a full list?
										</p>
										<a
											href={config.socials.github}
											target="blank"
										>
											<h1
												class="font-bold text-lg hover:text-zinc-200 transition-all"
											>
												Learn more &rightarrow;
											</h1>
										</a>
									</div>
								</div>
							</div>

							<!-- Links -->
							<div class="flex flex-col gap-6">
								<div class="flex flex-col">
									<h1 class="text-3xl font-bold">~/links</h1>
									<p class="text-zinc-400">
										A few useful links are provided below:
									</p>
								</div>

								{
									config.links.map((e) => (
										<a href={e.url} target="_blank">
											<div class="flex flex-row justify-center w-full items-center">
												<p>{e.name}</p>
												<div class="flex flex-grow flex-1 rounded-md border border-zinc-600 h-[2px] mx-4 justify-center items-center" />
												<p class="text-zinc-400">
													{e.url.slice(8)}{" "}
													&rightarrow;
												</p>
											</div>
										</a>
									))
								}
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<footer
			class="flex flex-row justify-center items-center gap-1 w-full text-center"
		>
			<p class="text-zinc-400">Made with ðŸ’– by {" "}</p>
			<a
				href="https://github.com/tygerxqt"
				target="_blank"
				class="text-zinc-400 hover:text-zinc-200 transition-all"
			>
				tygerxqt.
			</a>
		</footer>
	</body>
</html>
